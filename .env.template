# Universal Knowledge Graph (UKG) System Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application settings
FLASK_ENV=development
PORT=8080

# Security Keys - GENERATE UNIQUE VALUES FOR EACH ENVIRONMENT
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=<generate_unique_hex_key>
JWT_SECRET_KEY=<generate_unique_hex_key>
SESSION_SECRET=<generate_unique_hex_key>

# Database settings (SQLite for development - change to PostgreSQL for production)
DATABASE_URL=sqlite:///ukg_database.db
PGUSER=
PGPASSWORD=
PGHOST=
PGPORT=
PGDATABASE=

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=ukg_system.log

# UKG system settings
UKG_MAX_SIMULATION_LAYERS=7
UKG_DEFAULT_CONFIDENCE_THRESHOLD=0.85
UKG_DEFAULT_REFINEMENT_STEPS=12
UKG_MEMORY_CACHE_SIZE=4096
UKG_ENABLE_QUANTUM_SIMULATION=false
UKG_ENABLE_RECURSIVE_PROCESSING=true

# Microsoft Enterprise Integration (Azure AD) - Leave empty for development
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=

# Microsoft Azure OpenAI Integration - Leave empty for development
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2023-05-15

# Microsoft Azure Storage - Leave empty for development
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=ukg-media

# Microsoft Graph API - Leave empty for development
MS_GRAPH_CLIENT_ID=
MS_GRAPH_CLIENT_SECRET=
MS_GRAPH_TENANT_ID=

# Cross-Origin Resource Sharing (CORS)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Frontend settings
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_AUTH_PROVIDER=local

# Security settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
REMEMBER_COOKIE_SECURE=false
REMEMBER_COOKIE_DURATION=2592000

# Admin user (for initial setup)
# SECURITY: Generate strong random credentials for each environment
# Username: python -c "import secrets; print('ukg_admin_' + secrets.token_urlsafe(12))"
# Password: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_USERNAME=<generate_unique_username>
ADMIN_PASSWORD=<generate_strong_password>
ADMIN_EMAIL=admin@yourdomain.com
