# Universal Knowledge Graph (UKG) System Environment Variables
# Copy this file to .env and fill in the appropriate values
#
# SECURITY WARNING: Never commit .env file to version control!
# The .env file contains sensitive credentials and should be stored securely.

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
FLASK_ENV=development                       # development, testing, or production
PORT=3000                                   # Port to run the application on

# ============================================================================
# SECURITY SETTINGS - CRITICAL FOR PRODUCTION
# ============================================================================
# Generate secure secrets using:
# python3 -c "import secrets; print(secrets.token_hex(32))"
#
# NEVER use default or weak values in production!
SECRET_KEY=                                 # REQUIRED: 64-char hex string for session encryption
JWT_SECRET_KEY=                             # REQUIRED: 64-char hex string for JWT token encryption
SESSION_SECRET=                             # REQUIRED: 64-char hex string for session management

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
# PostgreSQL connection (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/ukg_database
PGUSER=user
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
PGDATABASE=ukg_database

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=INFO                              # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=ukg_system.log                     # Path to log file

# ============================================================================
# UKG SYSTEM SETTINGS
# ============================================================================
UKG_MAX_SIMULATION_LAYERS=7                 # Maximum number of simulation layers to use (1-10)
UKG_DEFAULT_CONFIDENCE_THRESHOLD=0.85       # Default confidence threshold for simulations
UKG_DEFAULT_REFINEMENT_STEPS=12             # Default number of refinement steps
UKG_MEMORY_CACHE_SIZE=4096                  # Memory cache size in MB
UKG_ENABLE_QUANTUM_SIMULATION=false         # Enable Layer 8 (Quantum Simulation)
UKG_ENABLE_RECURSIVE_PROCESSING=true        # Enable Layer 9 (Recursive Processing)

# ============================================================================
# MICROSOFT AZURE INTEGRATION
# ============================================================================
# Azure AD / Entra ID
AZURE_AD_TENANT_ID=                         # Azure AD tenant ID
AZURE_AD_CLIENT_ID=                         # Azure AD client ID
AZURE_AD_CLIENT_SECRET=                     # Azure AD client secret

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=                      # https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=                       # Azure OpenAI API key
AZURE_OPENAI_DEPLOYMENT=gpt-4o              # Azure OpenAI deployment name
AZURE_OPENAI_API_VERSION=2023-05-15         # Azure OpenAI API version

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=            # Azure Storage connection string
AZURE_STORAGE_CONTAINER=ukg-media           # Azure Storage container name

# Microsoft Graph API
MS_GRAPH_CLIENT_ID=                         # Microsoft Graph API client ID
MS_GRAPH_CLIENT_SECRET=                     # Microsoft Graph API client secret
MS_GRAPH_TENANT_ID=                         # Microsoft Graph API tenant ID

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================
# SECURITY WARNING: NEVER use * (wildcard) in production!
# Specify exact domains, e.g.: https://app.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGINS=http://localhost:3000          # Comma-separated list of allowed origins

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
REACT_APP_API_URL=http://localhost:3000/api # URL for frontend to connect to API
REACT_APP_AUTH_PROVIDER=azure_ad            # Authentication provider (azure_ad, entra_id, etc.)

# ============================================================================
# SESSION & COOKIE SECURITY
# ============================================================================
SESSION_COOKIE_SECURE=false                 # Set to true in production (requires HTTPS)
SESSION_COOKIE_HTTPONLY=true                # Prevents JavaScript access to cookies
SESSION_COOKIE_SAMESITE=Lax                 # SameSite policy: Lax or Strict
SESSION_LIFETIME_MINUTES=30                 # Session lifetime in minutes
REMEMBER_COOKIE_SECURE=false                # Set to true in production (requires HTTPS)
REMEMBER_COOKIE_DURATION=2592000            # 30 days in seconds

# ============================================================================
# RATE LIMITING
# ============================================================================
GLOBAL_RATE_LIMIT=200 per hour              # Global rate limit for all endpoints
RATELIMIT_STORAGE_URI=memory://             # Use redis://localhost:6379 for production

# ============================================================================
# ADMIN USER (Initial Setup Only)
# ============================================================================
# SECURITY CRITICAL: Change these immediately after first deployment!
# Generate secure credentials using:
# python3 -c "import secrets, string; print(f'Username: admin_{secrets.token_hex(6)}'); alphabet = string.ascii_letters + string.digits + string.punctuation; print(f'Password: {"".join(secrets.choice(alphabet) for _ in range(32))}')"
#
# NEVER use simple passwords like 'admin', 'password', etc.
ADMIN_USERNAME=                             # REQUIRED: Set a unique admin username
ADMIN_PASSWORD=                             # REQUIRED: Set a strong password (32+ chars recommended)
ADMIN_EMAIL=                                # REQUIRED: Set admin email address
