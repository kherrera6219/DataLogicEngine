# Universal Knowledge Graph (UKG) System Environment Variables
# Copy this file to .env and fill in the appropriate values

# Application settings
FLASK_ENV=development                       # development, testing, or production
PORT=3000                                   # Port to run the application on
SECRET_KEY=replace-with-secure-random-key   # Used for session encryption
JWT_SECRET_KEY=replace-with-secure-jwt-key  # Used for JWT token encryption

# Database settings (PostgreSQL example)
DATABASE_URL=postgresql://user:password@localhost:5432/ukg_database
PGUSER=user
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
PGDATABASE=ukg_database

# Logging settings
LOG_LEVEL=INFO                              # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=ukg_system.log                     # Path to log file

# UKG system settings
UKG_MAX_SIMULATION_LAYERS=7                 # Maximum number of simulation layers to use (1-10)
UKG_DEFAULT_CONFIDENCE_THRESHOLD=0.85       # Default confidence threshold for simulations
UKG_DEFAULT_REFINEMENT_STEPS=12             # Default number of refinement steps
UKG_MEMORY_CACHE_SIZE=4096                  # Memory cache size in MB
UKG_ENABLE_QUANTUM_SIMULATION=false         # Enable Layer 8 (Quantum Simulation)
UKG_ENABLE_RECURSIVE_PROCESSING=true        # Enable Layer 9 (Recursive Processing)

# Microsoft Enterprise Integration (Azure AD)
AZURE_AD_TENANT_ID=your-tenant-id           # Azure AD tenant ID
AZURE_AD_CLIENT_ID=your-client-id           # Azure AD client ID
AZURE_AD_CLIENT_SECRET=your-client-secret   # Azure AD client secret

# Microsoft Azure OpenAI Integration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o              # Azure OpenAI deployment name
AZURE_OPENAI_API_VERSION=2023-05-15         # Azure OpenAI API version

# Microsoft Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER=ukg-media           # Azure Storage container name

# Microsoft Graph API
MS_GRAPH_CLIENT_ID=your-client-id           # Microsoft Graph API client ID
MS_GRAPH_CLIENT_SECRET=your-client-secret   # Microsoft Graph API client secret
MS_GRAPH_TENANT_ID=your-tenant-id           # Microsoft Graph API tenant ID

# Cross-Origin Resource Sharing (CORS)
CORS_ORIGINS=*                              # Comma-separated list of allowed origins, * for all

# Frontend settings
REACT_APP_API_URL=http://localhost:3000/api # URL for frontend to connect to API
REACT_APP_AUTH_PROVIDER=azure_ad            # Authentication provider (azure_ad, entra_id, etc.)

# Security settings
SESSION_COOKIE_SECURE=true                  # Use secure cookies
SESSION_COOKIE_HTTPONLY=true                # Set HttpOnly flag on cookies
REMEMBER_COOKIE_SECURE=true                 # Use secure cookies for remember me
REMEMBER_COOKIE_DURATION=2592000            # 30 days in seconds

# Admin user (for initial setup)
ADMIN_USERNAME=admin                        # Initial admin username
ADMIN_PASSWORD=change-this-password         # Initial admin password
ADMIN_EMAIL=admin@example.com               # Initial admin email